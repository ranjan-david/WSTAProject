{
    "dataset_reader": {
        "type": "snli",
        "tokenizer": {
            "type": "word"
        },
        "token_indexers": {
            "tokens": {
                "type": "single_id",
                "lowercase_tokens": true
            },
            "elmo": {
                "type": "elmo_characters"
            }
        }
    },
    "validation_dataset_reader": {
        "type": "snli",
        "tokenizer": {
            "type": "word"
        },
        "token_indexers": {
            "tokens": {
                "type": "single_id",
                "lowercase_tokens": true
            },
            "elmo": {
                "type": "elmo_characters"
            }
        }
    },
    "train_data_path": "https://github.com/ranjan-david/WSTAProject/blob/master/train.json",
    "validation_data_path": "https://github.com/ranjan-david/WSTAProject/blob/master/devset.json",
    "model": {
        "type": "decomposable_attention",
        "text_field_embedder": {
            "type": "basic",
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "pretrained_file": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.6B.300d.txt.gz",
                    "embedding_dim": 300,
                    "projection_dim": 200,
                    "trainable": false
                },
                "elmo": {
                    "type": "elmo_token_embedder",
                    "options_file": "https://s3-us-west-2.amazonaws.com/allennlp/models/elmo/2x4096_512_2048cnn_2xhighway_5.5B/elmo_2x4096_512_2048cnn_2xhighway_5.5B_options.json",
                    "weight_file": "https://s3-us-west-2.amazonaws.com/allennlp/models/elmo/2x4096_512_2048cnn_2xhighway_5.5B/elmo_2x4096_512_2048cnn_2xhighway_5.5B_weights.hdf5",
                    "do_layer_norm": false,
                    "dropout": 0.5
                }
            }
        },
        "attend_feedforward": {
            "input_dim": 1224,
            "num_layers": 2,
            "hidden_dims": 200,
            "activations": "relu"
        },
        "similarity_function": {
            "type": "dot_product"
        },
        "compare_feedforward": {
            "input_dim": 400,
            "num_layers": 2,
            "hidden_dims": 200,
            "activations": "relu"
        },
        "aggregate_feedforward": {
            "input_dim": 400,
            "num_layers": 2,
            "hidden_dims": [200,3],
            "activations": ["relu", "linear"]
        },
        "initializer": [
         [".*linear_layers.*weight", {"type": "xavier_normal"}],
         [".*token_embedder_tokens\\._projection.*weight", {"type": "xavier_normal"}]
         ]
    },
    "iterator": {
        "type": "bucket",
        "sorting_keys": [["premise","num_tokens"], ["hypothesis","num_tokens"]],
        "batch_size": 64
    },
    "trainer": {
        "type": "default",
        "optimizer": {
            "type": "adagrad"
        },
        "patience": 20,
        "validation_metric": "+accuracy",
        "num_epochs": 140,
	"cuda_device": 0,
        "grad_clipping": 5
    }
}
